<h1>New resavation</h1>

<%= form_for @resavation, :url => {:controller => 'vmresavation', :action => 'create'} do |f| %>
  <% if @resavation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resavation.errors.count, "error") %> prohibited this resavation from being saved:</h2>

      <ul>
      <% @resavation.errors.full_messages.each do |msg| %>
